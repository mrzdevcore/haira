print("=== Basic Types ===")
print(42)
print(true)
print(false)

print("=== Arithmetic ===")
x = 10
y = 3
print(x + y)
print(x - y)
print(x * y)
print(x / y)
print(x % y)

print("=== Comparisons ===")
print(5 < 10)
print(5 > 10)
print(5 == 5)
print(5 != 10)

print("=== Conditionals ===")
if x > 5 {
    print("x is greater than 5")
}

if x < 5 {
    print("x is less than 5")
} else {
    print("x is NOT less than 5")
}

print("=== For Loop ===")
for i in 0..5 {
    print(i)
}

print("=== While Loop ===")
counter = 0
while counter < 3 {
    print(counter)
    counter = counter + 1
}

print("=== Functions ===")
add(a, b) {
    return a + b
}

result = add(7, 8)
print(result)

print("=== Done! ===")
